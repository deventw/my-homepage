{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ]    ,
        "consistent-return": 2,
        "no-else-return"   : 1,
        "space-unary-ops"  : 2,
        "space-in-parens": ["error", "never"],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/prop-types" : "off",
        "no-multiple-empty-lines": ["error", { "max": 1, "maxBOF": 1}]

    }
}
